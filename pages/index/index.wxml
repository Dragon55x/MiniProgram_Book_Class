<view class="container">
  <text class="title">Book a Course</text>
  <form bindsubmit="formSubmit">
    <view class="form-group">
      <label>Name:</label>
      <input type="text" placeholder="Enter your name" value="{{name}}" bindinput="bindNameInput"/>
    </view>
    <view class="form-group">
      <label>Email:</label>
      <input type="email" placeholder="Enter your email" value="{{email}}" bindinput="bindEmailInput"/>
    </view>
    <view class="form-group">
      <label>Choose a course:</label>
      <picker mode="selector" range="{{['JavaScript Fundamentals', 'Python Programming', 'React.js Development']}}" value="{{course}}" bindchange="bindCourseChange">
        <view class="picker">
          {{course ? ['JavaScript Fundamentals', 'Python Programming', 'React.js Development'][course] : 'Select a course'}}
        </view>
      </picker>
    </view>
    <view class="form-group">
      <label>Date:</label>
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class="picker">
          {{date ? date : 'Select a date'}}
        </view>
      </picker>
    </view>
    <button formType="submit">Book Now</button>
  </form>
  <view class="message">{{message}}</view>
</view>