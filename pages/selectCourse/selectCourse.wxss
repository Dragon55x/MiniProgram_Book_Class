/* pages/selectCourse/selectCourse.wxss */

.title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin: 40px 0 20px;
  position: relative;
  padding-bottom: 15px;   
}

/* 基础样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 网格布局 */
.course-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 两列 */
  grid-gap: 30rpx; /* 间距 */
}

/* 课程卡片样式 */
.course-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx; /* 固定高度，确保卡片大小一致 */
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  padding: 30rpx;
  transition: transform 0.3s;
}

.course-card:active {
  transform: scale(0.98); /* 点击反馈 */
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

.course-desc {
  font-size: 40rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
}

.bg-image {
  width: 100%;
  height: 100%;
}